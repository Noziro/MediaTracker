# This uses mod_rewrite. https://www.digitalocean.com/community/tutorials/how-to-set-up-mod_rewrite

RewriteEngine on

# Provides access to files in static folder, unchanged
## only applies to valid files
RewriteCond %{REQUEST_FILENAME} -f
## sends request unchanged
RewriteRule ^(static|upload)\/ - [L]

# Catches interface requests and serves them.
## re-routes all interface queries to the entrypoint
RewriteRule ^interface\/ interface/entrypoint.php [L,NC]
## must be valid file
RewriteCond %{REQUEST_FILENAME} -f
## sends request unchanged
RewriteRule interface/entrypoint.php - [L,NC]

# Redirects everything not caught by earlier rules to index
RewriteRule . index.php